{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "esnext",
        "module": "system",
        "jsx": "preserve",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "noImplicitAny": true,
        "outFile": "../../built/local/tsc.js",
        "lib": [
            "dom",
            "es2016"
        ]
    }
}